@code {
    [Parameter]
    public Character[] Characters { get; set; }
}

<div class="container">
    <div class="row">

        @foreach (var c in Characters)
        {
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="@string.Concat(c.thumbnail.path, ".", c.thumbnail.extension)" class="card-img-top" alt="@string.Concat(c.name, " image")">
                    <div class="card-body">
                        <h5 class="card-title">@c.name</h5>
                        <p class="card-text ">@c.description</p>
                        <a href="@c.resourceURI" class="btn btn-primary">Ver más</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
